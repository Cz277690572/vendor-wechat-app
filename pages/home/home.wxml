<!--home.wxml-->
<import src="../tpls/products/products-tpl.wxml"/>
 <view class="container">
 
  <swiper indicator-dots="true" autoplay="true" class="swiper">
    <block wx:for="{{bannerArr}}" wx:key="index">
       <swiper-item class="banner-item" data-id="{{item.key_word}}" bindtap="onProductsItemTap"> 
        <image mode="aspextFill" class="item-image" src="{{item.img.url}}">
        </image>
       </swiper-item> 
    </block>
  </swiper>

  <view class="home-main">
    <view class="home-main-theme">
      <view class="home-main-header">精选主题</view>
      <view class="theme-box">
        <block wx:for="{{themeArr}}" wx:key="index">
          <view wx:if="{{index == 2}}" data-id="{{item.id}}" data-name="{{item.name}}" 
          bindtap="onThemesItemTap" class="theme-item big">
            <image src="{{item.topic_img.url}}"></image>
          </view>
          <view wx:else data-id="{{item.id}}" data-name="{{item.name}}" 
          bindtap="onThemesItemTap" class="theme-item">
            <image src="{{item.topic_img.url}}"></image>
          </view>
        </block>
      </view>
    </view>

    <view class="home-main-products">
      <view class="home-main-header">最近新品</view>
      <template is="products" data="{{products:productsArr}}"></template>
    </view>
  </view>

</view> 
